{
	"manifest_version": 2,
	"name": "DougDougGo",
	"version": "1.0",

	"description": "DougDougGo is now your new search engine",

	"icons": {
		"48": "assets/pepper.png"
	},

	"homepage_url": "https://github.com/olivertzeng/DougDougGo",

	"content_scripts": [
		{
			"css": ["doug.css"],
			"js": [
				{
					"file": "doug.js",
					"run_at": "document_idle"
				}
			],
			"matches": ["*://*.duckduckgo.com/*"]
		}
	]
}
