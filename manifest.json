{
	"manifest_version": 2,
	"name": "DougDougGo",
	"version": "1.0",
	"description": "DougDougGo is now your new search engine",
	"icons": {
		"48": "assets/pepper.png"
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "dougdouggo@dougdouggo.com"
		}
	},
	"permissions": ["*://*.duckduckgo.com/*", "activeTab", "scripting"],

	"content_scripts": [
		{
			"js": ["doug.js"],
			"run_at": "document_end",
			"matches": ["*://*.duckduckgo.com/*"]
		}
	],

	"web_accessible_resources": ["assets/*.gif", "assets/*.mp3", "assets/*.png"]
}
